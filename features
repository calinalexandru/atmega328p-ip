	5	d3						oc2b	output						rectangular green			output 4
	6	d4		 				d4		output	status led 2 i2c	small red
	7	Vcc
	8	GND
	9	b6						b6		output	status led 3 spi	small orange
	10	b7						b7		input	digital input									input 0
	11	d5						oc0b	output	timer 0 pwm b		large green					output 1
	12	d6						oc0a	output	timer 0 pwm a		large red					output 0
